/**
 * Main application's configuration file.
 * 
 * @author  Nicolas Iglesias <nico@webpolis.com.ar> for daturajs - https://github.com/webpolis/daturajs -
 * @date    <%= Date() %>
 */
var _dev = {
    // params are publicly accessible from a controller via this.vars
    params:{
        appName : '<%= app.name %>'
    },

    // secret key, for session id generator
    secretKey:'<%= app.secret %>',
    
    // db configuration
    db:{
        driver:'<%= config.main.db.driver %>',
        host:'<%= config.main.db.host %>',
        username:'<%= config.main.db.username %>',
        password:'<%= config.main.db.password %>',
        database:'<%= config.main.db.database %>',
        port:'<%= config.main.db.port %>' // unix socket or port number
    },
    <% if (app.authModel!==null){%>
    // auth component configuration
    auth:{
        loginUrl : '/auth/login',
        logoutUrl : '/auth/logout',
        model : '<%= app.authModel %>'
    }
    <% }%>
}

exports.main = _dev || _prod || null;
